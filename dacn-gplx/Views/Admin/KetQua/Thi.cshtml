@model List<dacn_gplx.Models.ChiTietKetQuaThi>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý kết quả thi";
}

<section class="content">
    <div class="container-fluid">

        <div class="card">

            <!-- HEADER -->
            <div class="card-header d-flex align-items-center">

                <div class="ml-auto">
                    <form id="searchForm"
                          method="get"
                          asp-controller="KetQua"
                          asp-action="Thi"
                          class="input-group input-group-sm"
                          style="width: 350px;">

                        <input type="text"
                               name="search"
                               id="searchInput"
                               class="form-control"
                               placeholder="Tìm học viên hoặc bài thi..."
                               value="@ViewBag.Search">

                        @if (!string.IsNullOrEmpty(ViewBag.Search as string))
                        {
                            <div class="input-group-append">
                                <button type="button"
                                        id="resetSearchButton"
                                        class="btn btn-default"
                                        title="Xóa tìm kiếm">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        }
                    </form>
                </div>
            </div>

            <!-- TABLE -->
            <div class="card-body table-responsive p-0">
                <table class="table table-bordered table-hover text-center mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Học viên</th>
                            <th>Hồ sơ</th>
                            <th>Bài thi</th>
                            <th>Điểm tổng</th>
                            <th>Kết quả</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr style="cursor:pointer"
                                    onclick="window.location='@Url.Action(
                                        "ChiTietThi",
                                        "KetQua",
                                        new {
                                            baithiId = item.BaithiId,
                                            hosoId = item.HosoId
                                        })'">

                                    <td>@(item.Hoso?.Hocvien?.Hoten ?? "-")</td>
                                    <td>@(item.Hoso?.Tenhoso ?? "-")</td>
                                    <td>@(item.Baithi?.Tenbaithi ?? "-")</td>

                                    <td>
                                        @if (item.TongDiem.HasValue)
                                        {
                                            <strong>@item.TongDiem.Value.ToString("0.00")</strong>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>

                                    <td>
                                        @if (item.KetQuaDatDuoc == "Đạt")
                                        {
                                            <span class="badge badge-success">Đạt</span>
                                        }
                                        else if (item.KetQuaDatDuoc == "Không đạt")
                                        {
                                            <span class="badge badge-danger">Không đạt</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Chưa có</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    Chưa có dữ liệu kết quả thi
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        const searchInput = document.getElementById('searchInput');
        const form = document.getElementById('searchForm');
        const resetBtn = document.getElementById('resetSearchButton');

        let typingTimer;
        const typingInterval = 300;

        searchInput.addEventListener('input', function () {
            clearTimeout(typingTimer);
            typingTimer = setTimeout(() => {
                form.submit();
            }, typingInterval);
        });

        if (resetBtn) {
            resetBtn.addEventListener('click', function () {
                searchInput.value = '';
                form.submit();
            });
        }
    </script>
}
