@model List<dacn_gplx.Models.HangGplx>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý hạng GPLX";
}

<section class="content">
    <div class="container-fluid">

        <div class="card">

            <!-- CARD HEADER -->
            <div class="card-header">
        
                <!-- TOOLS RIGHT -->
                <div class="card-tools d-flex align-items-center">

                    <!-- SEARCH FORM -->
                    <form id="searchForm"
                          method="get"
                          asp-controller="HangGPLX"
                          asp-action="Index"
                          class="input-group input-group-sm"
                          style="width: 240px;">

                        <input type="text"
                               name="search"
                               id="searchInput"
                               class="form-control"
                               placeholder="Tìm kiếm..."
                               value="@ViewBag.Search">
                    </form>

                    <!-- RESET BUTTON -->
                    @if (!string.IsNullOrEmpty(ViewBag.Search as string))
                    {
                        <button type="button"
                                id="resetSearchButton"
                                class="btn btn-default btn-sm ml-2"
                                title="Xóa tìm kiếm">
                            <i class="fas fa-times"></i>
                        </button>
                    }

                    <!-- ADD BUTTON -->
                    <a asp-action="Create"
                       class="btn btn-success btn-sm ml-3">
                        <i class="fas fa-plus"></i> Thêm hạng GPLX
                    </a>
                </div>
            </div>

            <!-- TABLE -->
            <div class="card-body table-responsive p-0">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:80px;">STT</th>
                            <th>Tên hạng</th>
                            <th>Mô tả</th>
                            <th>Loại phương tiện</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var h in Model)
                        {
                            <tr onclick="window.location='@Url.Action("Details", "HangGPLX", new { id = h.HangId })'"
                                style="cursor:pointer">

                                <td>@h.HangId</td>
                                <td>@h.Tenhang</td>
                                <td>@h.Mota</td>
                                <td>@h.Loaiphuongtien</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        const searchInput = document.getElementById('searchInput');
        const form = document.getElementById('searchForm');
        const resetBtn = document.getElementById('resetSearchButton');

        let typingTimer;
        const typingInterval = 300;

        // Auto submit khi gõ
        searchInput.addEventListener('input', function () {
            clearTimeout(typingTimer);
            typingTimer = setTimeout(() => {
                form.submit();
            }, typingInterval);
        });

        // Reset search
        if (resetBtn) {
            resetBtn.addEventListener('click', function () {
                searchInput.value = '';
                form.submit();
            });
        }
    </script>
}
