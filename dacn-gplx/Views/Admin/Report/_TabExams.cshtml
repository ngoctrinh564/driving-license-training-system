@model dacn_gplx.ViewModels.Reports.DashboardReportVM
@using System.Text.Json

<div class="row">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <strong>Kỳ thi theo thời gian</strong>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <span class="badge badge-teal p-2">Tổng kỳ thi mới: @Model.SoKyThiMoi</span>
                </div>
                <canvas id="chart_exams_hbar" height="140"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <strong>Phân bố kỳ thi theo loại</strong>
            </div>
            <div class="card-body">
                <canvas id="chart_exams_pie" height="140"></canvas>
            </div>
        </div>
    </div>
</div>

@{
    var jsonBar = JsonSerializer.Serialize(Model.NewExamsByMonth);
    var jsonPie = JsonSerializer.Serialize(Model.ExamsByType);
}
<div id="__data_exams" data-bar='@Html.Raw(jsonBar)' data-pie='@Html.Raw(jsonPie)'></div>

<script>
    window.__renderTabCharts = function () {
        destroyChart("exams_hbar");
        destroyChart("exams_pie");

        const el = document.getElementById("__data_exams");
        const barPoints = JSON.parse(el.getAttribute("data-bar"));
        const pieSlices = JSON.parse(el.getAttribute("data-pie"));

        // Horizontal Bar
        const labelsBar = barPoints.map(p => p.Label);
        const valuesBar = barPoints.map(p => p.Value);

        const ctxBar = document.getElementById("chart_exams_hbar").getContext("2d");
        window.__charts["exams_hbar"] = new Chart(ctxBar, {
            type: "bar",
            data: {
                labels: labelsBar,
                datasets: [{
                    label: "Số kỳ thi",
                    data: valuesBar
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                plugins: { legend: { display: false } },
                scales: { x: { beginAtZero: true } }
            }
        });

        // Pie
        const labelsPie = pieSlices.map(p => p.Label);
        const valuesPie = pieSlices.map(p => p.Value);

        const ctxPie = document.getElementById("chart_exams_pie").getContext("2d");
        window.__charts["exams_pie"] = new Chart(ctxPie, {
            type: "pie",
            data: {
                labels: labelsPie,
                datasets: [{ data: valuesPie }]
            },
            options: { responsive: true }
        });
    }
</script>
