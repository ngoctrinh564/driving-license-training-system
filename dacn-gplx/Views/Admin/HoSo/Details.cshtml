@model dacn_gplx.Models.HoSoThiSinh

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-lg">

    <!-- HEADER -->
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="fas fa-id-card mr-2"></i>
            Chi tiết hồ sơ thí sinh
        </h4>
    </div>

    <div class="card-body">
        <div class="row">

            <!-- ================== THÔNG TIN HỌC VIÊN ================== -->
            <div class="col-md-4 mb-3">
                <div class="card border-info h-100">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-user"></i> Thông tin học viên</h5>
                    </div>

                    <div class="card-body text-center">

                        <!-- ========= ẢNH AVATAR ========= -->
                        <img src="@(string.IsNullOrEmpty(Model.Hocvien?.AvatarUrl)
                                  ? "/images/avatar/default-avatar.png"
                                  : Model.Hocvien.AvatarUrl)"
                             class="rounded-circle shadow mb-3"
                             style="width:150px; height:150px; object-fit:cover; border:3px solid #0dcaf0; cursor:pointer;"
                             onclick="showImageModal('@Model.Hocvien?.AvatarUrl')" />

                        <p class="text-muted">(Ảnh đại diện học viên)</p>

                        <!-- ========= THÔNG TIN ========= -->
                        <p><strong>Họ tên:</strong> @Model.Hocvien?.Hoten</p>

                        <p>
                            <strong>Năm sinh:</strong>
                            @Model.Hocvien?.Namsinh?.ToString("dd/MM/yyyy")
                        </p>

                        <p><strong>Giới tính:</strong> @Model.Hocvien?.Gioitinh</p>

                        <p><strong>CCCD:</strong> @Model.Hocvien?.SoCmndCccd</p>

                        <p><strong>Số điện thoại:</strong> @Model.Hocvien?.Sdt</p>

                        <p><strong>Mail:</strong> @Model.Hocvien?.Mail</p>

                    </div>
                </div>
            </div>

            <!-- ================== THÔNG TIN HỒ SƠ ================== -->
            <div class="col-md-4 mb-3">
                <div class="card border-primary h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-file-alt"></i> Thông tin hồ sơ</h5>
                    </div>

                    <div class="card-body">
                        <p><strong>ID hồ sơ:</strong> @Model.HosoId</p>
                        <p><strong>Tên hồ sơ:</strong> @Model.Tenhoso</p>
                        <p><strong>Ngày đăng ký:</strong> @Model.Ngaydangky?.ToString("dd/MM/yyyy")</p>
                        <p><strong>Hạng GPLX đăng ký:</strong> @Model.Hang?.Tenhang</p>

                        <p>
                            <strong>Trạng thái:</strong>
                            @if (Model.Trangthai == "Đã duyệt")
                            {
                                <span class="badge badge-success">Đã duyệt</span>
                            }
                            else if (Model.Trangthai == "Từ chối")
                            {
                                <span class="badge badge-danger">Từ chối</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Chờ duyệt</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- ================== PHIẾU KHÁM SỨC KHỎE ================== -->
            <div class="col-md-4 mb-3">
                <div class="card border-success h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-heartbeat"></i> Phiếu khám sức khỏe</h5>
                    </div>

                    <div class="card-body">

                        @if (Model.Khamsuckhoe != null)
                        {
                            <p><strong>Hiệu lực:</strong> @Model.Khamsuckhoe.Hieuluc</p>
                            <p><strong>Thời hạn:</strong> @Model.Khamsuckhoe.Thoihan?.ToString("dd/MM/yyyy")</p>
                            <p><strong>Khám mắt:</strong> @Model.Khamsuckhoe.Khammat</p>
                            <p><strong>Huyết áp:</strong> @Model.Khamsuckhoe.Huyetap</p>
                            <p><strong>Chiều cao:</strong> @Model.Khamsuckhoe.Chieucao m</p>
                            <p><strong>Cân nặng:</strong> @Model.Khamsuckhoe.Cannang kg</p>

                            <hr />
                            <h5 class="mt-3 text-success"><i class="fas fa-images"></i> Ảnh minh chứng</h5>

                            @if (Model.Khamsuckhoe.AnhGksks != null && Model.Khamsuckhoe.AnhGksks.Any())
                            {
                                <div class="row mt-2">

                                    @foreach (var img in Model.Khamsuckhoe.AnhGksks)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="border p-2 rounded shadow-sm bg-light">
                                                <img src="@img.Urlanh"
                                                     class="img-fluid rounded"
                                                     style="width:100%; height:200px; object-fit:cover; cursor:pointer;"
                                                     onclick="showImageModal('@img.Urlanh')" />
                                            </div>
</div>
                                    }

                                </div>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">Không có ảnh giấy khám sức khỏe.</p>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Chưa có phiếu khám sức khỏe.</p>
                        }

                    </div>
                </div>
            </div>

        </div>

        <!-- ================== HÀNG NÚT ================== -->
        <div class="row mt-4">

            <div class="col-md-6">
                <a href="/HoSo" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>

            <div class="col-md-6 text-right">
                <button class="btn btn-success mr-2"
                        onclick="approveHoso(@Model.HosoId)">
                    <i class="fas fa-check"></i> Duyệt
                </button>

                <button class="btn btn-danger"
                        onclick="rejectHoso(@Model.HosoId)">
                    <i class="fas fa-times"></i> Từ chối
                </button>
            </div>

        </div>

    </div>
</div>

<!-- MODAL PHÓNG TO ẢNH -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <img id="modalImg" class="img-fluid rounded" style="max-height:80vh; object-fit:contain;" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function approveHoso(id) {
            Swal.fire({
                title: 'Xác nhận duyệt?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                confirmButtonText: 'Duyệt'
            }).then(r => { if (r.isConfirmed) window.location.href = `/HoSo/Approve/${id}` })
        }

        function rejectHoso(id) {
            Swal.fire({
                title: 'Từ chối hồ sơ?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                confirmButtonText: 'Từ chối'
            }).then(r => { if (r.isConfirmed) window.location.href = `/HoSo/Reject/${id}` })
        }

        function showImageModal(url) {
            if (url === null || url === "" || url === "null") return;
            document.getElementById("modalImg").src = url;
            $('#imageModal').modal('show');
        }
    </script>
}