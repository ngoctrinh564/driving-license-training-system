@model dacn_gplx.Models.User

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm người dùng";
}

<div class="card">
    <div class="card-header">
    </div>

    <div class="card-body">
        <form asp-controller="User" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Role</label>
                <select asp-for="RoleId" class="form-control" asp-items="@(ViewBag.Roles as SelectList)">
                    <option value="">-- Chọn Role --</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
            <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
