@model dacn_gplx.Models.User

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chi tiết người dùng";

    var hocVien = ViewBag.HocVien as dacn_gplx.Models.HocVien;
}

<section class="content">
    <div class="container-fluid">

        <!-- THÔNG TIN USER -->
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Thông tin người dùng</h3>
            </div>

            <div class="card-body p-0">
                <table class="table table-bordered mb-0">
                    <tr>
                        <th style="width:200px;">ID</th>
                        <td>@Model.UserId</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>@Model.Username</td>
                    </tr>
                    <tr>
                        <th>Quyền</th>
                        <td>@(Model.Role?.Rolename ?? "Không có")</td>
                    </tr>
                    <tr>
                        <th>Trạng thái</th>
                        <td>
                            @if (Model.Isactive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Inactive</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- THÔNG TIN HỌC VIÊN -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin học viên</h3>
            </div>

            <div class="card-body p-0">
                @if (hocVien != null)
                {
                    <table class="table table-bordered mb-0">
                        <tr>
                            <th style="width:200px;">Họ tên</th>
                            <td>@hocVien.Hoten</td>
                        </tr>
                        <tr>
                            <th>CMND/CCCD</th>
                            <td>@hocVien.SoCmndCccd</td>
                        </tr>
                        <tr>
                            <th>Năm sinh</th>
                            <td>@hocVien.Namsinh?.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Giới tính</th>
                            <td>@hocVien.Gioitinh</td>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <td>@hocVien.Sdt</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@hocVien.Mail</td>
                        </tr>
                    </table>
                }
                else
                {
                    <div class="p-3">
                        <span class="text-muted">
                            Người dùng này chưa có thông tin học viên.
                        </span>
                    </div>
                }
            </div>
        </div>

        <!-- FOOTER BUTTON -->
        <div class="mt-3">
            <a asp-controller="User"
               asp-action="Index"
               class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>

            <a asp-controller="User"
               asp-action="Edit"
               asp-route-id="@Model.UserId"
               class="btn btn-warning">
                <i class="fas fa-edit"></i> Sửa
            </a>
        </div>

    </div>
</section>
