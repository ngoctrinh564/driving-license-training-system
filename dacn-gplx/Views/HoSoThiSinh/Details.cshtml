@model dacn_gplx.ViewModels.HoSoThiSinhViewModel

@{
    ViewData["Title"] = "Chi tiết hồ sơ";
}

<h2 class="mb-4">Chi tiết hồ sơ</h2>

<div class="card p-4 shadow-sm">

    <h4 class="text-primary mb-3">Thông tin hồ sơ</h4>

    <p><strong>Tên hồ sơ:</strong> @Model.Tenhoso</p>
    <p><strong>Hạng GPLX:</strong> @Model.TenHang</p>
    <p><strong>Ngày đăng ký:</strong> @Model.Ngaydangky</p>
    <p><strong>Trạng thái:</strong> @Model.Trangthai</p>
    <p><strong>Ghi chú:</strong> @Model.Ghichu</p>

    <hr />

    <h4 class="text-primary mb-3 mt-3">Giấy khám sức khỏe</h4>

    <p><strong>Hiệu lực:</strong> @Model.Hieuluc</p>
    <p><strong>Ngày hết hạn:</strong> @Model.Thoihan</p>

    <p><strong>Mắt trái:</strong> @(Model.KhamMatTrai)</p>
    <p><strong>Mắt phải:</strong> @(Model.KhamMatPhai)</p>

    <p><strong>Huyết áp:</strong> @Model.Huyetap</p>
    <p><strong>Chiều cao:</strong> @Model.Chieucao cm</p>
    <p><strong>Cân nặng:</strong> @Model.Cannang kg</p>

    @if (Model.AnhGkskUrls != null && Model.AnhGkskUrls.Any())
    {
        <h5 class="mt-4 mb-2"><strong>Ảnh giấy khám sức khỏe</strong></h5>
        <div class="row">
            @foreach (var url in Model.AnhGkskUrls)
            {
                <div class="col-md-3 mb-3">
                    <img src="@url"
                         class="img-thumbnail shadow-sm"
                         style="width:100%; height:200px; object-fit:cover;" />
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted fst-italic">Chưa có ảnh giấy khám sức khỏe.</p>
    }

    <div class="mt-4">
        <a href="/HoSoThiSinh/Edit/@Model.HosoId" class="btn btn-primary">Chỉnh sửa</a>
        <a href="/HoSoThiSinh" class="btn btn-secondary ms-2">Quay lại danh sách</a>
    </div>

</div>
